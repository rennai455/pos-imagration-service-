# Database configuration for local development
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pos_dev?schema=public"

# Supabase configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"  # Use anon key for client-side auth
SUPABASE_SERVICE_KEY="your-service-role-key"  # Optional: for admin operations

# Security
JWT_SECRET="replace-with-secure-secret-min-32-chars"  # Must be at least 32 characters

# Server configuration
NODE_ENV="development"  # development, test, or production
HOST="127.0.0.1"       # Forces IPv4 binding on Windows
PORT="3000"            # API server port
