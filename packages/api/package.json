{
  "name": "@codex/api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "postinstall": "prisma generate --schema=./prisma/schema.prisma",
    "predev": "ts-node ../../scripts/validate-env.ts",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "prestart": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "check:env": "tsx src/utils/env.ts",
    "check:db": "tsx scripts/test-db.ts",
    "check:system": "tsx scripts/system-check.ts",
    "check:all": "pnpm check:env && pnpm check:db && pnpm check:system",
    "db:start": "cd dev && docker-compose up -d",
    "db:stop": "cd dev && docker-compose down",
    "db:logs": "cd dev && docker-compose logs -f postgres",
    "db:clean": "cd dev && docker-compose down -v"
  },
  "dependencies": {
    "@codex/db": "workspace:*",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "5.22.0",
    "@sinclair/typebox": "^0.34.41",
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.29.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.4.0",
    "pino-pretty": "^10.3.1",
    "prisma": "5.22.0",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^11.0.0",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.12",
    "jest-mock-extended": "^4.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
