datasource db {../../db/prisma/schema.prisma
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  stores    Store[]
}

model Store {
  id        String   @id @default(cuid())
  name      String
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  products  Product[]
  users     User[]

  @@index([tenantId])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int
  barcode     String?
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id])
  createdAt   DateTime @default(now())
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id])
  password    String?  // Nullable since we use Supabase for auth
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}