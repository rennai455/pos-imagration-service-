datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// Represents a tenant in the multi-tenant system
model Tenant {
  id        String   @id @default(uuid())
  name      String
  stores    Store[]
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("tenants")
}

model Store {
  id        String    @id @default(cuid())
  name      String
  tenantId  String
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
  createdAt DateTime  @default(now())
  products  Product[]
  users     User[]
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  stock       Int
  sku         String?
  barcode     String?
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id])
  createdAt   DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id])
  createdAt DateTime @default(now())
}

/// Idempotency key registry to enforce (tenantId, key) uniqueness
model Idempotency {
  id        String   @id @default(cuid())
  tenantId  String
  key       String
  createdAt DateTime @default(now())

  @@unique([tenantId, key])
  @@map("idempotency_keys")
}
