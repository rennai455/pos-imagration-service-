# Production Environment Variables
# Managed via container orchestration secrets

# Database
DATABASE_URL=postgresql://postgres:[password]@[prod-project-ref].supabase.co:5432/postgres
SUPABASE_URL=https://[prod-project-ref].supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# API Configuration
NODE_ENV=production
PORT=4000
LOG_LEVEL=warn
API_BASE_URL=https://api.yourdomain.com

# CORS Settings
CORS_ORIGIN=https://admin.yourdomain.com,https://mobile.yourdomain.com

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-key-min-32-chars-ROTATE-QUARTERLY
JWT_EXPIRES_IN=7d

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-collector.yourdomain.com
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=900000

# Feature Flags
BACKGROUND_SYNC_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true

# Security
HELMET_ENABLED=true
TRUST_PROXY=true