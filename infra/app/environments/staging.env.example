# Staging Environment Variables
# Copy to .env.staging and fill in actual values

# Database
DATABASE_URL=postgresql://postgres:[password]@[staging-project-ref].supabase.co:5432/postgres
SUPABASE_URL=https://[staging-project-ref].supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# API Configuration
NODE_ENV=staging
PORT=4000
LOG_LEVEL=info
API_BASE_URL=https://[staging-api-url]

# CORS Settings
CORS_ORIGIN=https://[staging-admin-url],https://[staging-mobile-url]

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=7d

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel-collector.staging.yourdomain.com
PROMETHEUS_ENABLED=true

# Rate Limiting
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=900000

# Feature Flags
BACKGROUND_SYNC_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true