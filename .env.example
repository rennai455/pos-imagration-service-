# Development Environment Variables Template
# Copy this to .env and fill in actual values

# ===== DATABASE =====
DATABASE_URL=postgresql://postgres:password@localhost:5432/codex_pos_dev

# ===== SUPABASE (Optional - not required for Railway) =====
SUPABASE_URL=https://demo.supabase.co
SUPABASE_ANON_KEY=demo_anon_key
SUPABASE_SERVICE_ROLE_KEY=demo_service_key

# ===== API CONFIGURATION =====
NODE_ENV=development
HOST=0.0.0.0
PORT=4000
LOG_LEVEL=debug
API_BASE_URL=http://localhost:4000

# ===== CORS SETTINGS =====
# Legacy (backward compatibility)
CORS_ORIGIN=http://localhost:3000,http://localhost:8081
# Railway uses this one (CSV format, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# ===== SECURITY =====
# JWT Secret (min 32 chars)
JWT_SECRET=your-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=7d

# Webhook Secret for HMAC validation (min 32 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WEBHOOK_SECRET=dev-webhook-secret-change-in-production-min-32-chars

# ===== TIMEOUTS =====
REQUEST_TIMEOUT_MS=30000
CONNECTION_TIMEOUT_MS=60000
SHUTDOWN_GRACE_MS=15000

# ===== MONITORING =====
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# ===== RATE LIMITING =====
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ===== FEATURE FLAGS =====
BACKGROUND_SYNC_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true
